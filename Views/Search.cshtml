@model NotesApart.ViewModels.SearchViewModel

<h1>Search Results for "@Model.Query"</h1>

@if (Model.Albums.Any())
{
    <h2>Albums</h2>
    <ul>
        @foreach (var album in Model.Albums)
        {
            <li>
                <a asp-controller="Album" asp-action="Details" asp-route-id="@album.AlbumId">@album.Title</a> by @album.Artist.Name
            </li>
        }
    </ul>
}

@if (Model.Songs.Any())
{
    <h2>Songs</h2>
    <ul>
        @foreach (var song in Model.Songs)
        {
            <li>
                <a asp-controller="Song" asp-action="Details" asp-route-id="@song.SongId">@song.Title</a> by @song.Artist.Name
            </li>
        }
    </ul>
}

@if (Model.Artists.Any())
{
    <h2>Artists</h2>
    <ul>
        @foreach (var artist in Model.Artists)
        {
            <li>
                <a asp-controller="Artist" asp-action="Details" asp-route-id="@artist.ArtistId">@artist.Name</a>
            </li>
        }
    </ul>
}